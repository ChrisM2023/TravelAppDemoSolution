
@model TravelAppDemoViewModel

@using TravelAppDataAccess.Model
@{
    ViewData["title"] = " UnCompleted Events";
}

<script type="text/javascript">
    function openLocation(url) {
        window.location.href = url;
    }
    function confirmDelete(id) {
        $("#hdnDeleteAppointmentId").val(id);
        $("#deleteModal").modal("show");
    }
    function cancelDelete() {
        $("#hdnDeleteAppointmentId").val(0);
        $("#deleteModal").modal("hide");
    }
    function deleteAppointment() {
        var id = $("#hdnDeleteAppointmentId").val();
        window.location.href = "/TravelAppDemo/DeleteFutureEvents/" + id;
    }
</script>
<input type="hidden" id="hdnDeleteAppointmentId" value="0" />

<div class="text-center">
    @if (!String.IsNullOrEmpty(Model.ActionMessage))
    {
        string colorClass = Model.IsActionSuccess ? "alert-success" : "alert-danger";

        <div class="alert @colorClass alert-dismissible fade show" role="alert">
            <strong>@Model.ActionMessage</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <h1 class="display-4">TravelAppDemo</h1>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <tr>

                 

                    <th>Activity</th>
                    <th> Mandatory</th>
                    <th> Description</th>
                    <th> Companion</th>
                    <th> Destination</th>
                    <th> Appointment</th>
                    <th> Notes</th>
                </tr>
                @foreach (TravelAppDemoModel travelAppDemo in Model.TravelAppDemosList)
                {
                    <tr>
                        <th>@travelAppDemo.Activity</th>
                        <th>@Model.Message</th>
                        <th>@travelAppDemo.Description</th>
                        <th>@travelAppDemo.Companion</th>
                        <th>@travelAppDemo.Destination</th>
                        <th>@travelAppDemo.Appointment</th>
                        <th>@travelAppDemo.Notes</th>

                        <td colspan="1"><button type="button" onclick="javascript:openLocation('/TravelAppDemo/Update/@travelAppDemo.TravelId')" class="btn btn-success btn-sm">Edit </button></td>
                        <td><button type="button" onclick="javascript:confirmDelete(@travelAppDemo.TravelId)" class="btn btn-danger btn-sm">DELETE</button></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CONFIRM DELETE</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this appointment?</p>
                <button type="button" onclick="javascript:cancelDelete()" class="btn btn-secondary btn-sm">CANCEL</button>
                <button type="button" onclick="javascript:deleteAppointment()" class="btn btn-danger btn-sm">DELETE</button>
            </div>
        </div>
    </div>
</div>
